while True:
    choice = input("Who would you like to spend time with? Type 'Piglet' or 'Pooh'")
    choice = choice.lower()# should fix case sesitivity for user.
    if choice.lower() == 'piglet':
        for line in pig_line.values():
            print(f"{character['pig']}{line}")
            time.sleep(1)
    elif choice.lower() == 'pooh':
        for line in pooh_line.values():
            print(f"{character['pooh']}{line}")
            time.sleep(1)
    elif choice.lower() =='quit':
            print("Goodbye from the Hundred Acre Wood!")
            break
    else:
            print("Sorry, that's not an option. Please pick 'Piglet', or 'Pooh'")
